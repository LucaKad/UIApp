<Window x:Class="NlpUiDemo.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About NLP Explorer"
        MinHeight="250" MinWidth="450"
        MaxHeight="600" MaxWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="LightGray"/>
        <SolidColorBrush x:Key="WindowTextBrush" Color="Black"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="NLP Explorer"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource WindowTextBrush}"/>
        
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      MaxHeight="400">
            <TextBlock TextWrapping="Wrap"
                       Foreground="{DynamicResource WindowTextBrush}">
                <Run Text="A simple demo app showing basic information "/>
                <LineBreak/>
                <Run Text="about Natural Language Processing and a configurable UI."/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Author: Luka Kadyntsev"/>
            </TextBlock>
        </ScrollViewer>
        
        <Button Grid.Row="2"
                Content="OK"
                Width="80"
                Height="30"
                HorizontalAlignment="Right"
                Margin="0,15,0,0"
                Click="OkButton_Click"/>
    </Grid>
</Window>

